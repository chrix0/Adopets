<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shop_checkout"
    android:padding="25dp"
    android:weightSum="100"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/title_metode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Metode pembayaran"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/pilih_metode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_metode">
            <RadioButton
                android:id="@+id/kartu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kartu kredit / Gopay / OVO"/>
            <RadioButton
                android:id="@+id/virtual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Virtual Account"/>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/areaAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/pilih_metode"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pilih_metode"
                android:weightSum="8">

                <TextView
                    android:id="@+id/title_alamat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:text="Alamat Pengiriman"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/ubahAlamat"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="0.5"
                    android:text="Edit"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Jl. BZ Hamid Komplek Mitra Lama no.11 LK X, Sumatera Utara, Medan Johor, blablablablablaaisjdaisjdaidjaoidja aisdjaoidajdoiadoisadjoiajdaodaoidsjoij"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/areaTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/areaAlamat"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pilih_metode"
                android:weightSum="8">

                <TextView
                    android:id="@+id/title_telp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:text="Nomor telepon"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/ubahTelp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="0.5"
                    android:text="Edit"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/telp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="083199020730"/>

        </LinearLayout>





    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></Space>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_weight="2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textStyle="bold"
            android:text="Subtotal"/>
        <TextView
            android:id="@+id/subtotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Rp. 0"
            android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_weight="2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textStyle="bold"
            android:text="Ongkos kirim"/>
        <TextView
            android:id="@+id/ongkir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Rp. 0"
            android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_weight="2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textStyle="bold"
            android:text="Total"/>
        <TextView
            android:id="@+id/total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Rp. 0"
            android:gravity="end"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:gravity="bottom">
        <Button
            android:id="@+id/addToCart"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#e09f12"
            android:text="Checkout" />

    </RelativeLayout>

</LinearLayout>