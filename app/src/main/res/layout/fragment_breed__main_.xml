<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Breed_Main_Frag">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/search"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:paddingLeft="10dp" />

        <ImageButton
            android:id="@+id/button_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/search"
            android:background="@color/transparent"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/breed_search" />

        <ImageButton
            android:id="@+id/button_filter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/button_search"
            android:background="@color/transparent"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/breed_filter" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_breed"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/search"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#ffb845"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:id="@+id/item_breed"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/search"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/item_breed_image"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test_dog" />

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/item_breed_image"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Animal Type"
                        android:textSize="18dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/nameIcon"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_below="@id/type"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/adopt_name" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/type"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/nameIcon"
                        android:text="Name" />

                    <ImageView
                        android:id="@+id/genderIcon"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_below="@id/nameIcon"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/adopt_gender" />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/genderIcon"
                        android:text="Gender" />

                    <ImageView
                        android:id="@+id/locationIcon"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_below="@id/genderIcon"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/adopt_location" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gender"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/locationIcon"
                        android:text="Location" />

                    <ImageView
                        android:id="@+id/priceIcon"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_below="@id/locationIcon"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/breed_price" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/location"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/priceIcon"
                        android:text="Price" />

                    <Button
                        android:id="@+id/apply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/priceIcon"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:text="Apply" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</FrameLayout>